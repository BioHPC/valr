citHeader("To cite Rbedtools in publications use:")

citEntry(entry        = "Unpublished",
         title        = "Genome Arithmetic with {Rbedtools}",
         author       = personList(as.person("Ryan Mackie"),
                                   as.person("Jay Hesselberth")),
         note         = "to be deposited in bioArxiv.",
         
         textVersion  =
           paste("Ryan Mackie and Jay Hesselberth (2016).",
                 "Genome arithmetic with Rbedtools.")
)
